<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
    xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button">
    
	
	<ui:style>
		.important {
			font-weight: bold;
		}
		.label {
			font-size: 14px;
			margin-bottom: 10px;
			margin-left: 10px;
			}
		.heading{
  			font-size: 2em;
  			font-weight: bold;
  			color: #777777;
  			margin: 40px 0px 70px;
  			text-align: center;
		}
		.body{
			border-width: 5px;
			border-color: darkblue;

	}
	</ui:style>

		<g:HTMLPanel>
		<h1 styleName="heading">Unternehmen definieren</h1>
		<div styleName="body">
		<g:HorizontalPanel>
   	    <g:VerticalPanel>
   	    	<g:HorizontalPanel>
				<g:Label styleName="{style.label}">Unternehmensname: </g:Label>
				<g:TextBox styleName="{style.label}" ui:field="tNameUN"/>		
 			</g:HorizontalPanel>
 			<g:HorizontalPanel>
	    		<g:Label styleName="{style.label}"> Anzahl der Mitarbeiter: </g:Label>
				<gxt:Slider ui:field="sPersonal"/>
	    	</g:HorizontalPanel>
 			<g:HorizontalPanel>	    		 
	    		<g:Label styleName="{style.label}"> Kapital des Unternehmen: </g:Label>
	    		<gxt:Slider ui:field="sKapital"/>
	    	</g:HorizontalPanel>
	    	<g:HorizontalPanel>
	     		<g:Label styleName="{style.label}"> Qualitaet des Produkts: </g:Label>
	     		<gxt:Slider ui:field="sQualitaet"/>
	     	</g:HorizontalPanel>
	     	<g:HorizontalPanel>
		 		<g:Label styleName="{style.label}"> Kapazitaet des Produkts: </g:Label>
		 		<gxt:Slider ui:field="sKapazitaet"/>
		 	</g:HorizontalPanel>
    	</g:VerticalPanel>
    	</g:HorizontalPanel>
    	</div>
    	<g:HorizontalPanel>
    		<g:Button styleName="{style.important}" ui:field="bKonkurrenz" />
    		<g:Button styleName="{style.important}" ui:field="bDaten" />
			<g:Button styleName="{style.important}" ui:field="bWeiter" />
		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 